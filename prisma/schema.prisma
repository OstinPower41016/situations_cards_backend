generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoomStatus {
  CREATED
  READY_TO_START
  IN_GAME
  INACTIVE
}

enum UserStatus {
  OFFLINE
  ONLINE
  IN_LOBBY
  PLAYING
}

enum RoomParticipantStatus {
  THINKING
  WAITING
}

model Room {
  id           String     @id @default(uuid())
  name         String     @unique
  private      Boolean    @default(false)
  status       RoomStatus @default(CREATED)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  participants User[]

  @@map("rooms")
}

model User {
  id         String     @id @default(uuid())
  nickname   String     @unique
  guest      Boolean    @default(false)
  status     UserStatus @default(ONLINE)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  room       Room?      @relation(fields: [roomId], references: [id])
  roomId     String?
  userGame   UserGame?
  userGameId String?    @unique
  isLeader   Boolean    @default(false)

  @@map("users")
}

model UserGame {
  id    String @id @default(uuid())
  score Int    @default(0)

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  answers   UserGameAnswer[]
  questions UserGameQuestion[]

  @@map("user_games")
}

model Answer {
  id          String           @id @default(uuid())
  description String
  games       UserGameAnswer[]

  @@map("answers")
}

model Question {
  id          String             @id @default(uuid())
  description String
  games       UserGameQuestion[]

  @@map("questions")
}

model UserGameAnswer {
  answerId   String
  userGameId String

  answer   Answer   @relation(fields: [answerId], references: [id])
  userGame UserGame @relation(fields: [userGameId], references: [id])

  @@id([answerId, userGameId])
  @@map("user_game_answers")
}

model UserGameQuestion {
  questionId String
  userGameId String

  question Question @relation(fields: [questionId], references: [id])
  userGame UserGame @relation(fields: [userGameId], references: [id])

  @@id([questionId, userGameId])
  @@map("user_game_questions")
}
